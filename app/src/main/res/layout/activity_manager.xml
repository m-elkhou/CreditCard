<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grdnt"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="45dp"
        android:paddingRight="55dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/icon2"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/idGET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="id"
                    android:textColorHint="#d9e5f3"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:textSize="16dp"
                    android:inputType="text"
                    android:textColor="#fff"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4a5a71"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/icon2"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/numberEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Number"
                    android:textColorHint="#d9e5f3"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:textSize="16dp"
                    android:inputType="text"
                    android:textColor="#fff"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4a5a71"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/icon2"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/expiryDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ExpiryDate"
                    android:textColorHint="#d9e5f3"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:textSize="16dp"
                    android:inputType="text"
                    android:textColor="#fff"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4a5a71"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/icon2"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/controlNumberEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Control Number"
                    android:textColorHint="#d9e5f3"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:textSize="16dp"
                    android:inputType="number"
                    android:textColor="#fff"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4a5a71"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/icon2"
                    android:layout_gravity="center"/>
                <EditText
                    android:id="@+id/typeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Type"
                    android:gravity="center"
                    android:textColorHint="#d9e5f3"
                    android:layout_marginLeft="15dp"
                    android:background="#00000000"
                    android:letterSpacing="0.1"
                    android:textSize="16dp"
                    android:inputType="number"
                    android:textColor="#fff"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4a5a71"></LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        android:paddingRight="60dp">
        <Button
            android:id="@+id/get"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:background="#009a9a"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:text="Get"
            android:textColor="#d9e5f3"
            android:textSize="17dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/Validate"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:background="#009a9a"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:text="Validate"
            android:textColor="#d9e5f3"
            android:textSize="17dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/insert"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:background="#009a9a"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:text="Insert"
            android:textColor="#d9e5f3"
            android:textSize="17dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/ShowAll"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:background="#009a9a"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:text="Show All"
            android:textColor="#d9e5f3"
            android:textSize="17dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/Clear"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:background="#009a9a"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:text="Clear"
            android:textColor="#d9e5f3"
            android:textSize="17dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="400dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:src="@drawable/card" />
    </LinearLayout>
</RelativeLayout>
