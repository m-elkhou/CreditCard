    <style name="AppTheme_Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@drawable/grdnt</item>
    </style>
</resources>
